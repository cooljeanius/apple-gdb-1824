.PHONY: all etags tags ls stage1 stage2 stage3 stage4 .always.

stage1:		force
		-mkdir -v stage1
		-mv -fv $(STAGESTUFF) stage1

stage2:		force
		-mkdir -v stage2
		-mv -fv $(STAGESTUFF) stage2

stage3:		force
		-mkdir -v stage3
		-mv -fv $(STAGESTUFF) stage3

stage4:		force
		-mkdir -v stage4
		-mv -fv $(STAGESTUFF) stage4

against=stage2

comparison:	force
		for i in *.o; do cmp $${i} $(against)/$${i} || exit 1; done

de-stage1:	force
		-(cd stage1 ; mv -fv * ..)
		-rmdir stage1

de-stage2:	force
		-(cd stage2 ; mv -fv * ..)
		-rmdir stage2

de-stage3:	force
		-(cd stage3 ; mv -fv * ..)
		-rmdir stage3

